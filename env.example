# =============================================================================
# LIMITLESS HEALTH - ENVIRONMENT VARIABLES
# =============================================================================

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=Limitless Health
NEXT_PUBLIC_APP_VERSION=0.1.0

# =============================================================================
# SENTRY (MONITORING)
# =============================================================================
# Mock DSN for POC - Replace with real DSN for production
NEXT_PUBLIC_SENTRY_DSN=https://mock-dsn@sentry.io/123456
SENTRY_ORG=limitless-health
SENTRY_PROJECT=limitless-health-frontend
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# =============================================================================
# INTERNATIONALIZATION (I18N)
# =============================================================================
NEXT_PUBLIC_DEFAULT_LOCALE=fr
NEXT_PUBLIC_SUPPORTED_LOCALES=en,fr
NEXT_PUBLIC_FALLBACK_LOCALE=fr

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Mock API endpoints for POC - Replace with real API URLs
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001/api
NEXT_PUBLIC_API_TIMEOUT=10000
NEXT_PUBLIC_API_VERSION=v1

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Mock auth for POC - Replace with real auth provider
NEXT_PUBLIC_AUTH_PROVIDER=mock
NEXT_PUBLIC_AUTH_REDIRECT_URL=http://localhost:3000/auth/callback

# =============================================================================
# FEATURE FLAGS
# =============================================================================
NEXT_PUBLIC_ENABLE_AI_DOCTOR=true
NEXT_PUBLIC_ENABLE_BIOMARKERS=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_MULTI_LANG=true

# =============================================================================
# ANALYTICS (OPTIONAL)
# =============================================================================
# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# Plausible Analytics
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=limitless-health.com

# =============================================================================
# DEVELOPMENT
# =============================================================================
# Enable debug mode
NEXT_PUBLIC_DEBUG=true
# Enable React Query DevTools
NEXT_PUBLIC_ENABLE_QUERY_DEVTOOLS=true
# Enable Storybook
NEXT_PUBLIC_ENABLE_STORYBOOK=true

# =============================================================================
# TESTING
# =============================================================================
# Cypress
CYPRESS_BASE_URL=http://localhost:3000
# Vitest
VITEST_ENV=jsdom

# =============================================================================
# DEPLOYMENT
# =============================================================================
# Vercel (if using Vercel)
VERCEL_URL=http://localhost:3000
# Build optimization
NEXT_PUBLIC_ENABLE_SWC=true 